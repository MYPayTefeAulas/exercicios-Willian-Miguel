<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SorterDadsActivity">

    <TextView
        android:id="@+id/txtSaidaD1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btTrocarD1" />

    <TextView
        android:id="@+id/txtSaidaD2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/btTrocarD3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btTrocarD2" />

    <TextView
        android:id="@+id/txtSaidaD3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toTopOf="@+id/btLancar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btTrocarD3" />

    <Button
        android:id="@+id/btLancar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LanÃ§ar Dados"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btTrocarD3" />

    <Button
        android:id="@+id/btTrocarD1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dado 1"
        app:layout_constraintBottom_toTopOf="@+id/btTrocarD2"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="173dp" />

    <Button
        android:id="@+id/btTrocarD2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dado 2"
        app:layout_constraintBottom_toTopOf="@+id/btTrocarD3"
        app:layout_constraintTop_toBottomOf="@+id/btTrocarD1"
        tools:layout_editor_absoluteX="165dp" />

    <Button
        android:id="@+id/btTrocarD3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dado 3"
        app:layout_constraintBottom_toTopOf="@+id/btLancar"
        app:layout_constraintTop_toBottomOf="@+id/btTrocarD2"
        tools:layout_editor_absoluteX="161dp" />

</androidx.constraintlayout.widget.ConstraintLayout>